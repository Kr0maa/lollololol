#include<stdio.h>
#include<string.h>
void main()
{
int choice,length;
char a[50],b[50];
printf("1.length of string");
printf("2.Copying a string");
printf("3.Comparing a string");
printf("4.concatenate two strings");
printf("Enter your Choice");
scanf("%d",&choice);
switch(choice)
{
case 1:
printf("Enter String");
gets(a);
printf("Length of string is %d",strlen(a));
break;
case 2:
printf("Enter String a");
gets(a);
printf("The string stored in b before copying is %s",b);
strcpy(b,a);
printf("The String stored in b after copying is %s",b);
break;
case 3:
printf("Enter String a");
gets(a);
printf("Enter String b to compare with");
gets(b);
if(strcmp(a,b)>0)
printf("String A is greater than String B");
else
printf("String B is greater than String A");
break;
case 4:
printf("Enter String A");
gets(a);
printf("Enter String B");
gets(b);
printf("Concatenated word is %s",strcat(a,b));
}
}
